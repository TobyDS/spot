{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node", "react", "react-dom"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/auth": ["./auth/index.ts"],
      "@/auth/*": ["./auth/*"],
      "@/components/*": ["./components/*"],
      "@/ui/*": ["./components/ui/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/lib/*": ["./lib/*"],
      "@/prisma/*": ["./prisma/*"],
      "@/router/*": ["./router/*"],
      "@/store/*": ["./store/*"],
      "@/tests/*": ["./__tests__/*"],
      "@/*": ["./app/*"],
      "types/*": ["./types/*"],
      "~/*": ["./public/*"],
      // Types error: https://stackoverflow.com/a/73019448
      "react": ["./node_modules/@types/react"]
    }
  },
  "typeRoots": ["./node_modules/@types", "./types"],
  "include": [
    "next-env.d.ts",
    "**/types/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
